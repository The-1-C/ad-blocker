{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.1",
  "description": "A secure, simple ad blocker Chrome extension.",
  "permissions": [
    "declarativeNetRequest"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ad Blocker Settings"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
